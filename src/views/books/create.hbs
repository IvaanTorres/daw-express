<form class='col-md-5 mx-auto card card-body' action='/books' method='post'>
  <h2 class='text-center mb-4'>Add Book</h2>
  <div class='form-group mb-2'>
    <label for='title'>Title:</label>
    <input class='form-control' type='text' name='title' />
  </div>
  <div class='form-group mb-2'>
    <label for='authorName'>Author Name:</label>
    <input class='form-control' type='text' name='authorName' />
  </div>
  <div class='form-group mb-2'>
    <label for='editorial'>Editorial:</label>
    <input class='form-control' type='text' name='editorial' />
  </div>
  <div class='form-group mb-4'>
    <label for='price'>Price:</label>
    <input class='form-control' type='text' name='price' />
  </div>
  <button class='btn btn-primary btn-block' type='submit'>Create</button>
</form>